version: '3.5'

services:
    dockit-proxy:
        image: haproxy:latest
        container_name: dockit-proxy
        environment:
            - BALANCE=leastconn
        volumes:
            - "./haproxy.conf:/usr/local/etc/haproxy/haproxy.cfg"
        ports:
            - 80:80
            - 443:443
            - 1936:1936
        networks:
          - dockit

    dockit-mailhog:
        image: mailhog/mailhog:latest
        container_name: dockit-mailhog
        ports:
            - "8025:8025"
        networks:
          - dockit

    dockit-redis:
        image: redis:alpine
        container_name: dockit-redis
        ports:
            - "6379:6379"
        networks:
          - dockit

    dockit-mysql:
        image: mysql:5.7
        container_name: dockit-mysql
        volumes:
            - "/Users/jeroen/.dockit/data/mysql:/var/lib/mysql"
        environment:
            - MYSQL_ROOT_PASSWORD=root
        ports:
            - "3306:3306"
        networks:
            - dockit

networks:
    dockit:
        name: dockit